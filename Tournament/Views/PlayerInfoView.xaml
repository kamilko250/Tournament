<Window x:Class="Tournament.Views.PlayerInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tournament.Views"
        mc:Ignorable="d"
        Title="PlaterInfoView" Height="203" Width="271">
    <DockPanel Margin="0,0,0,0">
        <Label Content="Saved" DockPanel.Dock="Top" Height="100"/>
        <Label DockPanel.Dock="Top" Content="{Binding Info, FallbackValue='Your data was updated.'}" VerticalContentAlignment="Bottom"/>
        <Rectangle DockPanel.Dock="Top" Fill="#ECECEC" Height="60"/>
    </DockPanel>
</Window>
