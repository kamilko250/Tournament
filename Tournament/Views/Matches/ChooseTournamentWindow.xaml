<Window x:Class="Tournament.Views.Matches.ChooseTournamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tournament.Views.Matches"
        mc:Ignorable="d"
        Title="ChooseTournament" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Tournament;component\css\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource NormalView}">
        <StackPanel Orientation="Horizontal" Style="{StaticResource Header}">
            <TextBlock Style="{StaticResource MainText}" Margin="30,0,0,0" Text="Choose one Tournament from available:"/>
        </StackPanel>
    </Grid>
</Window>
